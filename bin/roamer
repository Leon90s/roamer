#!/usr/bin/env python

"""
argh
"""

import os
from roamer.python_edit import file_editor
from roamer.directory import RoamerDirectory


def main():
    """
    argh
    """
    cwd = os.getcwd()
    raw_entries = os.listdir(cwd)
    roamer_directory = RoamerDirectory(cwd, raw_entries)
    output = file_editor(roamer_directory.text())
    roamer_directory.process_edit(output)
    print output

if __name__ == "__main__":
    main()
