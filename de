#!/usr/bin/env python

"""
argh
"""

import os
import hashlib
from python_edit import file_editor


def main():
    """
    argh
    """
    cwd = os.getcwd()
    entries = os.listdir(cwd)

    entry_list = []
    for entry in entries:
        entry_path = os.path.join(cwd, entry)
        digest = hashlib.sha224(entry_path).hexdigest()
        string = "%s %s" % (entry, digest)
        entry_list.append(string)
    file_editor('\n'.join(entry_list))

if __name__ == "__main__":
    main()
